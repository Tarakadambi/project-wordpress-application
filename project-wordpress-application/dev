kubectl create namespace dev

kubectl apply -f - <<EOF
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: dev
type: Opaque
data:
  postgres-password: $(echo -n 'secret123' | base64)
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: edb-postgres
  namespace: dev
spec:
  replicas: 1
  selector:
    matchLabels:
      app: edb-postgres
  template:
    metadata:
      labels:
        app: edb-postgres
    spec:
      containers:
      - name: postgres
        image: bitnami/postgresql:17.6.0-debian-12-r4
        env:
        - name: POSTGRESQL_PASSWORD
          valueFrom:
            secretKeyRef:
              name: postgres-secret
              key: postgres-password
        ports:
        - containerPort: 5432
---
apiVersion: v1
kind: Service
metadata:
  name: edb-postgres
  namespace: dev
spec:
  type: ClusterIP
  ports:
  - port: 5432
    targetPort: 5432
  selector:
    app: edb-postgres
EOF
